<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/colorWhite"
              tools:context=".DashBoardFragment">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
            >
                <LinearLayout
                        android:id="@+id/ll_medical_files"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:background="@color/colorGrapeFruit"
                >
                    <ImageButton
                            android:clickable="false"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"
                            android:tint="@color/colorWhite"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/ic_folder_shared_black_24dp"
                    />
                    <TextView
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorGrapeFruitDark"
                            android:text="الملفات الطبية"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                    />

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_personal_info"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:weightSum="1"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:background="@color/colorBitterSweet"
                >
                    <ImageButton
                            android:clickable="false"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"
                            android:tint="@color/colorWhite"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/ic_person_black_24dp"
                    />
                    <TextView
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorBitterSweetDark"
                            android:text="معلوماتي الشخصية"
                            android:textSize="18sp"

                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                    />

                </LinearLayout>

            </LinearLayout>

            <!-- Second Row-->
            <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">


                <LinearLayout
                        android:id="@+id/ll_setting"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:background="@color/colorLavander"
                >
                    <ImageButton
                            android:clickable="false"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"
                            android:tint="@color/colorWhite"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/ic_settings_black_24dp"
                    />
                    <TextView
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorLavanderDark"
                            android:text="التنظيمات"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                    />

                </LinearLayout>


            </LinearLayout>
            <!-- End Second Row-->

        </LinearLayout>

    </ScrollView>


</LinearLayout>
