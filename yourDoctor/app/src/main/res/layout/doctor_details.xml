<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layoutDirection="rtl"
                  android:layout_marginRight="15dp"
                  android:padding="5dp">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="اسم الدكتور"
                  android:layout_weight="0.5"
                  style="@style/doctor_list_ittem"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="محمد محمودي"
                  android:layout_weight="0.5"
                  style="@style/doctor_list_ittem"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layoutDirection="rtl"
                  android:layout_marginRight="15dp"
                  android:padding="5dp">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="الاختصاص"
                  android:layout_weight="0.5"
                  style="@style/doctor_list_ittem"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="جراحة عظمية"
                  android:layout_weight="0.5"
                  style="@style/doctor_list_ittem"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layoutDirection="rtl"
                  android:layout_marginRight="15dp"
                  android:padding="2dp">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="مكان العيادة"
                  android:layout_weight="0.5"
                  style="@style/doctor_list_ittem"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="صالحية مهاجرين"
                  android:layout_weight="0.5"
                  style="@style/doctor_list_ittem"/>
    </LinearLayout>


    <com.ba.yourdoctor.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dateFormat="MMMM yyyy"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layoutDirection="rtl"
                  android:weightSum="100.0"
                  android:layout_marginRight="5dp">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="80.0"
                      android:weightSum="1.0"
                      android:layout_gravity="center_vertical"
                      android:orientation="horizontal">
            <TextView android:id="@+id/tv_date"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:layout_weight="0.5"
                      android:text=""
                      android:textSize="13dp"
android:layout_gravity="center_vertical"
                     />
            <TextView android:id="@+id/tv_time"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:text=""
                      android:layout_weight="0.5"
                      android:gravity="center_vertical"
                      android:textSize="13dp"
                      />


        </LinearLayout>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_change"
                android:text="تعديل"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_submit"
                android:text="تأييد"/>


    </LinearLayout>


</LinearLayout>